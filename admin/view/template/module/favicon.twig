{{ header }}{{ column_left }}
<div id="content">
	<div class="page-header">
		<div class="container-fluid">
			<div class="float-end">
				<div class="input-group">
					<button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary" style="margin-left: 10px;">
						<i class="{{ save_icon }}"></i>
					</button>
					<a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light">
						<i class="{{ back_icon }}"></i>
					</a>
				</div>
			</div>
			<h1>{{ heading_title }}</h1>
			<ol class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
					<li class="breadcrumb-item">
						<a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
					</li>
				{% endfor %}
			</ol>
		</div>
	</div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				{{ error_warning }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endif %}
		<div class="card">
			<div class="card-header">
				<i class="fa-solid fa-pencil"></i>
				{{ text_edit }}
			</div>
			<div class="card-body">
				<form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
					<div class="row mb-3">
						<label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
						<div class="col-sm-3">
							<div class="form-check form-switch form-switch-lg">
								<input type="hidden" name="module_favicon_status" value="0"/>
								<input type="checkbox" name="module_favicon_status" value="1" id="input-status" class="form-check-input" {% if module_favicon_status %} checked {% endif %}/>
							</div>
						</div>
					</div>
					<div class="row mb-3">
						<label class="col-sm-2 col-form-label">
							{{ entry_favicon }}
						</label>
						<div class="col-sm-3">
							<div class="card image">
								<img src="{{ alt_icon }}" alt="" title="" id="thumb-alt-icon" data-oc-placeholder="{{ placeholder }}" class="card-img-top"/>
								<input type="hidden" name="module_favicon_icon" value="{{ module_favicon_icon }}" id="input-alt-icon"/>
								<div class="card-body">
									<button type="button" data-oc-toggle="image" data-oc-target="#input-alt-icon" data-oc-thumb="#thumb-alt-icon" class="btn btn-primary btn-sm btn-block">
										<i class="fa-solid fa-pencil"></i>
										{{ button_edit }}</button>
									<button type="button" data-oc-toggle="clear" data-oc-target="#input-alt-icon" data-oc-thumb="#thumb-alt-icon" class="btn btn-warning btn-sm btn-block">
										<i class="fa-regular fa-trash-can"></i>
										{{ button_clear }}</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{{ footer }}
